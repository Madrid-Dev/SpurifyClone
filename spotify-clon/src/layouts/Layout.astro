---
import AsideMenu from '../components/AsideMenu.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<title>	{title} </title>
	</head>
	<body>
		<div id="app" class="relative h-screen p-2 gap-2">
			<aside class="[grid-area:aside] flex-col flex overflow-y-auto">
				<AsideMenu />
			</aside>

			<main class="[grid-area:main] rounded-lg bg-zinc-990 overflow-y-auto">
				MAIN
			</main>

			<footer class="[grid-area:player] min-h-[60px] ">
				PLAYER
			</footer>
			
		</div>
		<slot />
	</body>
</html>
<style>
	#app{
		display: grid;
		grid-template-areas: 
			"aside main main" /* es la forma de ordenar el grid, el aside a la izquierda y el main ocupando 2 columnas */
			"player player player";
		grid-template-columns: 18rem 1fr;
		grid-template-rows: 1fr auto;


	}

	@font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Medium.woff2") format("woff2");
        font-weight: 500;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Book.woff2") format("woff2");
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Light.woff2") format("woff2");
        font-weight: 300;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Bold.woff2") format("woff2");
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Black.woff2") format("woff2");
        font-weight: 900;
        font-style: normal;
        font-display: swap;
      }
</style>
<style is:global>
	html {
		color: white;
		font-family: "CircularStd", system-ui, sans-serif;
		background: #050607;
		background-size: 224px;
	}
</style>
