---
import type { Playlist } from "../lib/data";

interface Props{
    playlist: Playlist;
}
/*  La importacion del tipo me ayuda a tener este contrato del objeto Playlist y poder autocompeltar
    Con usando el Astro props   */

const { playlist } = Astro.props
const {
    id,
    cover,
    title,
    artists,
    color
} = playlist

const artistsString = artists.join(", ")
---

<a 
    href=`/playlist/${id}`
    class="playlis-item flex relative p-2 overflow-hidden items-center gap-4 rounded-md hover:bg-zinc-600">

    <picture class="h-12 w-12 flex-none">
        <img 
            src={cover} 
            alt={`Cover of ${title} by ${artistsString}`} 
            class="object-cover w-full h-full rounded-md"
        >
    </picture>

    <div class="flex flex-auto flex-col truncate">
        <h4 class="font-medium text-sm">
            {title}
        </h4>

        <span class="text-zinc-400 text-xs">
            {artistsString}
        </span>
    </div>

</a>